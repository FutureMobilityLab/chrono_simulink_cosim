{
  "Name": "NADS Vehicle - Ford Taurus 1994",
  "Type": "Vehicle",
  "Template": "WheeledVehicle",

  "Chassis": {
    "Input File": "ford_taurus_1994/Taurus_Chassis.json"
  },

  // The vehicle's COM is the origin. The suspension locations are specified w.r.t. 
  // this origin.
  "Axles": [
    {
      "Suspension Input File": "ford_taurus_1994/Taurus_FrontMacPhersonStrut.json",
      "Suspension Location": [0, 0, 0.0],
      "Steering Index": 0,
      "Left Wheel Input File": "ford_expedition_2003/wheel/WheelSimple.json",
      "Right Wheel Input File": "ford_expedition_2003/wheel/WheelSimple.json",
      "Left Brake Input File": "ford_expedition_2003/brake/Expedition_BrakeSimple.json",
      "Right Brake Input File": "ford_expedition_2003/brake/Expedition_BrakeSimple.json",
      "Antirollbar Input File": "ford_taurus_1994/Taurus_FrontAntirollBarRSD.json",

      // Chrono attaches the antirollbar to the lower control arm (LCA) for MacPherson
      // strut suspensions. The Taurus attaches it to the strut. It would be more
      // accurate to modify Chrono so that the antirollbar connects to the
      // upright body. For simplicity, we can make the distance constraint attach to
      // the LCA at the point where the LCA attaches to the upright. To get somewhat
      // reasonable results, we can place the antirollbar at the spindle z-height. The
      // length of the distance constraint (droplink length) is adjusted accordingly.
      "Antirollbar Location": [ 0.79375, 0.00000, -0.27795 ] // -0.27795
    },

    {
      //"Suspension Input File": "ford_taurus_1994/Taurus_ThreeLinkIRS.json",
      //"Suspension Input File": "ford_taurus_1994/Taurus_RearMacPhersonStrut.json",
      "Suspension Input File": "ford_taurus_1994/Taurus_DoubleWishboneRear.json",
      "Suspension Location": [0, 0, 0.0],
      "Left Wheel Input File": "ford_expedition_2003/wheel/WheelSimple.json",
      "Right Wheel Input File": "ford_expedition_2003/wheel/WheelSimple.json",
      "Left Brake Input File": "ford_expedition_2003/brake/Expedition_BrakeSimple.json",
      "Right Brake Input File": "ford_expedition_2003/brake/Expedition_BrakeSimple.json",
      "Antirollbar Input File": "ford_taurus_1994/Taurus_RearAntirollBarRSD.json",

      // For the same reason as explained above for the front suspension, the rear 
      // antirollbar must be modified from the NADS definition. We place the antirollbar
      // at the spindle z-height. The length and droplink length are adjusted so that it
      // connects to the LCA spherical joint.
      "Antirollbar Location": [ -1.96421, 0.00000, -0.26807 ]
    }
  ],

  "Steering Subsystems": [
    {
      "Input File": "ford_taurus_1994/Taurus_RackPinion.json",
      "Location": [0.78108, 0, -0.19742],
      "Orientation": [ 1, 0, 0, 0 ]
    }
  ],

  "Wheelbase": 3.0226,
  "Minimum Turning Radius": 7.62,
  "Maximum Steering Angle (deg)": 25,

  "Driveline": {
    "Input File": "ford_expedition_2003/driveline/Expedition_Driveline.json",
    "Suspension Indexes": [ 0, 1 ]
  }
}
